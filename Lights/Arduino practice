#include <Adafruit_NeoPixel.h>
#include <Wire.h>

#define PIN 6

Adafruit_NeoPixel strip = Adafruit_NeoPixel(30, PIN, NEO_GRB + NEO_KHZ800);

void setup()
{
strip.begin();
strip.show();

}


void loop(){
int location=0;

strip.setPixelColor(location ++ 1,255,255,255);

delay(1000);
 
 
strip.show()
} 




