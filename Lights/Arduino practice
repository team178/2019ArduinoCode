#include <Adafruit_NeoPixel.h>
#include <Wire.h>

#define PIN 6

Adafruit_NeoPixel strip = Adafruit_NeoPixel(30, PIN, NEO_GRB + NEO_KHZ800);
int location==0;
void setup()
{
strip.begin();
strip.show();

}


void loop(){


strip.setPixelColor(location,255,255,255);
location++;


 
 if(location==30)
 strip.setPixelcolor{(location++,0,0,0)};
 
strip.show();
} 




